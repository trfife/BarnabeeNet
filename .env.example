# BarnabeeNet Configuration
# Copy to .env and fill in values

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Environment: development, staging, production
BARNABEENET_ENV=development

# API server settings
BARNABEENET_HOST=0.0.0.0
BARNABEENET_PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR
BARNABEENET_LOG_LEVEL=INFO

# =============================================================================
# REDIS (Working Memory)
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Uncomment if authentication enabled

# =============================================================================
# STT CONFIGURATION
# =============================================================================

# Primary STT engine: distil-whisper (CPU) or parakeet (GPU)
STT_PRIMARY_ENGINE=parakeet
STT_FALLBACK_ENGINE=distil-whisper

# Distil-Whisper settings (Beelink CPU)
WHISPER_MODEL=distil-whisper/distil-small.en
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_BEAM_SIZE=1

# GPU Worker (Man-of-war via Windows port forward at 192.168.86.61)
GPU_WORKER_HOST=192.168.86.61
GPU_WORKER_PORT=8001
GPU_WORKER_TIMEOUT_MS=100
GPU_WORKER_HEALTH_INTERVAL_SEC=3

# =============================================================================
# TTS CONFIGURATION
# =============================================================================

# Kokoro settings
KOKORO_VOICE=af_bella
KOKORO_SPEED=1.0
KOKORO_SAMPLE_RATE=24000

# =============================================================================
# AUDIO SETTINGS
# =============================================================================

# Input audio format (what we expect from clients)
AUDIO_INPUT_SAMPLE_RATE=16000
AUDIO_INPUT_CHANNELS=1

# Output audio format (what we send to clients)
AUDIO_OUTPUT_SAMPLE_RATE=24000
AUDIO_OUTPUT_FORMAT=wav

# Voice Activity Detection
VAD_AGGRESSIVENESS=2
VAD_FRAME_DURATION_MS=30

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent requests
MAX_CONCURRENT_STT=4
MAX_CONCURRENT_TTS=4

# Request timeouts (milliseconds)
STT_TIMEOUT_MS=5000
TTS_TIMEOUT_MS=3000

